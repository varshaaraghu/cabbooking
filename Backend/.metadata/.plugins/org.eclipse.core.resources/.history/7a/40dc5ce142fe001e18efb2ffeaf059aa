package com.service;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.entity.User;
import com.repo.UserRepository;

@Service
public class AccountService {

	@Autowired
	UserRepository accountRepository;
	
	public String createAccount(User account) {
		Optional<User> op = accountRepository.findById(account.getAccno());
		if(op.isPresent()) {
			return "Account number must be unique";
		}else {
			accountRepository.save(account);
			return "Account created";
		}
	}
	
	public String findBalanceByAccno(int accno) {
		Optional<User> op = accountRepository.findById(accno);
		if(op.isPresent()) {
			User acc  = op.get();
			return "Your balance is "+acc.getAmount();
		}else {
				return "Account not present";
		}
	}
	
	public String findBalanceByEmailId(String emailId) {
		try {
			return "Your Balance is "+accountRepository.findAccountByEmailId(emailId);
		} catch (Exception e) {
			System.err.println(e);
			return "Account not present";
		}
	}
}